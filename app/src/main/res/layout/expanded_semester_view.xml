<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.basicjava.MainActivity">
<!-- The expanded_semester_view.xml requires the "drawable" folder with the file "textview_border.xml".-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="80dp"
                    android:text="Spring 2016"
                    android:textColor="@color/colorBlack"
                    android:textSize="40dp"
                    android:background="@drawable/textview_border"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="15"
                    android:textColor="@color/colorBlack"
                    android:textSize="40dp"
                    android:background="@drawable/textview_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="A"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="CS 2413"
                    android:textColor="@color/colorBlack"
                    android:textSize="35dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="122dp"
                    android:background="@drawable/textview_border"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="4 "
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Data Structures"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Prerequisite: CS 1412"
                    android:textColor="@color/colorBlack"
                    android:textSize="25dp"
                    android:padding="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="ECE 3302"
                    android:textColor="@color/colorBlack"
                    android:textSize="35dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="110dp"
                    android:background="@drawable/textview_border"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="3"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:background="@drawable/textview_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Fundamentals of Electrical Engineering"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Prerequisites: 2.5 TTU GPA; C or better in MATH 1452, majors only"
                    android:textColor="@color/colorBlack"
                    android:textSize="25dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="ECE 3362"
                    android:textColor="@color/colorBlack"
                    android:textSize="35dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="110dp"
                    android:background="@drawable/textview_border"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="3"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:background="@drawable/textview_border"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Microcontrollers"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Prerequisite: 2.5 TTU GPA; C or better in ECE 1305 or CS 1412 and ECE 2372"
                    android:textColor="@color/colorBlack"
                    android:textSize="25dp"/>
            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>
